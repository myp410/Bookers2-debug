<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Create Group</h2>
      <% form_with model: @group do |f| %>
        <div class="form-group">
          <%= f.label: グループ名 %>
          <%= f.text_field: name, class: "form-control name" %>
        </div>
        <div class="form=group">
          <%= f.label: 紹介文 %>
          <%= f.text_area: introduction, class: "form-control introduction" %>
        </div>
        <dic class="form-group">
          <%= f.label: グループ画像 %>
          <%= f.file_field: group_image, class: "form-control-file group-image", accept:'image/*' %>
        </dic>
        <div class="form-group">
          <%= f.submit "Create Group", class: "btn btn-secondary" %>
        </div>
      <% end %>  
    </div>
  </div>
</div>
